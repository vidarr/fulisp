#ifndef __CALL_STACK_H__
#define __CALL_STACK_H__

#include "config.h"


typedef struct {
    char *id;
    struct Expression *expr;
} CallStackEntry;


typedef struct {
    stack StackEntry[CALL_STACK_SIZE];
    StackEntry *next;
} CallStack;


#define CALL_STACK_PUSH(s, x) ...

#define CALL_STACK_POP(s) ...

CallStack *callStackCreate(int size);



#endif
